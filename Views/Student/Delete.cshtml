@model Studentdata.Models.StudentInfo
@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Mobile:</strong> @Model.MobileNumber</p>
    <p><strong>State:</strong> @Model.State</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
