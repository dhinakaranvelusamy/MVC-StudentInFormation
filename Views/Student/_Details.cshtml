@model StudentCRUD.Models.Student

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Student Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Mobile</dt>
            <dd class="col-sm-8">@Model.MobileNumber</dd>

            <dt class="col-sm-4">State</dt>
            <dd class="col-sm-8">@Model.State</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">DOB</dt>
            <dd class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</dd>
        </dl>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</div>
