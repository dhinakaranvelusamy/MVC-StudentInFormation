@model StudentCRUD.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<table class="table table-bordered">
    <tr><th>Name</th><td>@Model.Name</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Mobile</th><td>@Model.MobileNumber</td></tr>
    <tr><th>State</th><td>@Model.State</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>Date of Birth</th><td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td></tr>
</table>

<a class="btn btn-primary" href="@Url.Action("Index", "Student")">Back to List</a>
<a class="btn btn-warning" href="@Url.Action("Edit", "Student", new { id = Model.Id })">Edit</a>
<a class="btn btn-danger" href="@Url.Action("Delete", "Student", new { id = Model.Id })">Delete</a>
