@model StudentCRUD.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle-fill"></i> An error occurred</h4>
                </div>
                <div class="card-body">
                    <p class="lead text-danger">@Model.ErrorMessage</p>

                    @if (Model.ShowRequestId)
                    {
                        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
                    }

                    <a asp-action="Index" asp-controller="Student" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left-circle"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
